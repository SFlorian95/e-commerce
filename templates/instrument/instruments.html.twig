
{% extends 'base.html.twig' %}

{% block title %} MusicShop {% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block icon %} <link rel="shortcut icon" type="image/x-icon" href="images/note.png" />{% endblock %}

{% block body %}
<h1 class="text-info">Music~Shop</h1>

<h4>Bienvenue chez <span class="text-info"> MusicShop</span>, n°1 de la vente e-commerce d'instrument musicaux. </h4>

{# tableau #}
    <table class="table table-dark mt-5">
    <thead class="thead-dark">
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
        <th>Image</th>
        <th>Price</th>
        <th></th>
    </thead>
        
            {% for instrument in produits %}
            <tr>
                <td class="font-weight-bold">{{ instrument.name | capitalize }}</td>
                <td>{{ instrument.category.name | capitalize }}</td>
                <td>{{ instrument.description | capitalize}}</td>
                <td><img src="{{asset('images/'~instrument.image)}}" alt="{ instrument.image }"></td>
                <td>{{ instrument.price | capitalize }}€</td>
                <td>
                <a href="{{ url('instrument.details', {id: instrument.id})}} " class="btn btn-sm btn-info">Consulter</a>
                

                </td>
            </tr>
            {% endfor %}
        
        
    </table>
    <a href="{{ url("home.index") }}"><button class="btn btn-light mt-5">Retour à la page d'accueil</button></a>
{% endblock %}

